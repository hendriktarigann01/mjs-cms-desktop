{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist-electron",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist-electron", ".next", "types", "src"]
}
